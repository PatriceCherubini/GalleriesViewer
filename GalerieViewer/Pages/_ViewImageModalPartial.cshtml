@model GalerieViewer.ViewModels.CarouselViewModel

<div class="modal fade" id="#exampleModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document" id="showImage">
        <div class="modal-content">
            <div class="modal-body">
                <div id="containerHeaderImg">
                    <div class="row">
                        <div class="col">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                    <div id="carouselExample" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="~/Images/@Model.ListPictures[0].FileName" alt="@Model.ListPictures[0].Description">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>@Model.ListPictures[0].Nom</h5>
                                    <p>@Model.ListPictures[0].Description</p>
                                    <p>@Model.ListPictures[0].DateCreation</p>
                                </div>
                            </div>
                            @for (var i = 1; i < Model.NbPictures - 1; i++)
                            {
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="~/Images/@Model.ListPictures[i].FileName" alt="@Model.ListPictures[i].Description">
                                    <div class="carousel-caption d-none d-md-block">
                                        <h5>@Model.ListPictures[i].Nom</h5>
                                        <p>@Model.ListPictures[i].Description</p>
                                        <p>@Model.ListPictures[i].DateCreation</p>
                                    </div>
                                </div>
                            }
                        </div>
                        <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

