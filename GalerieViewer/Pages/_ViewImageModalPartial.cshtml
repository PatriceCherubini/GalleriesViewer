@model GalerieViewer.ViewModels.CarouselViewModel

<div class="modal" id="carousel-pictures">
    <span class="close cursor" onclick="closeModal()">&times;</span>
    <div class="modal-content">

        @for (var i = 0; i < Model.NbPictures; i++)
        {
            <div id="carouselExample" class="carousel-slides" data-ride="carousel">  
                <div class="card">
                    <img class="card-img w-100" src="~/Images/@Model.ListPictures[i].FileName" alt="@Model.ListPictures[i].Description">
                    <div class="card-img-overlay">
                        <p id="date-creation">@Model.ListPictures[i].DateCreation</p>
                        <p id="descriptionImage">@Model.ListPictures[i].Description</p>
                        <p>@Model.ListPictures[i].Nom</p>
                    </div>
                    <div class="numbertext">Pictures @(i+1) of @Model.NbPictures</div>
                </div>
            </div>
        }
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
</div>

