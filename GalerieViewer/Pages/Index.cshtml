@page "{id=1}"
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div id="gallery-modal-placeholder"></div>
<div class="container border border-dark">
    <div class="row">
        <div class="col-sm-3 m-2 p-1 border border-danger">
            <div>
                @await Component.InvokeAsync("ListGaleries", new { show = Model.Show })
            </div>
            <hr />
            <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-url="@Url.Page("Index", "GalleryModalPartial", new { openedGallery = Model.Show })">
                Add new gallery
            </button>
        </div>
        <div class="col m-2 p-2 border border-success">
            <div class="p-3">
                @if (Model.Galerie == null)
                {
                    <p class="row">No gallery found</p>
                    <hr />
                }
                else
                {
                    <p class="row">Galerie: @Model.Galerie.Name</p>
                    <hr />
                    if (Model.Galerie.ListeImages.Count() == 0)
                    {
                        <p class="row">This gallery is empty</p>
                    }
                    else
                    {
                        <div class="container-imageCard row border border-info">
                            @foreach (var imageItem in Model.Galerie.ListeImages)
                            {
                                <div class="col-xl-4 col-lg-6 col-sm-12 p-2 border border-danger">
                                    <div class="card rounded bg-dark">
                                        <div class="embed-responsive embed-responsive-4by3">
                                            <img src="~/Images/@imageItem.FileName" alt="@imageItem.Description" class="img-fluid card-img embed-responsive-item">
                                        </div>
                                        <div class="py-2 px-2 card-img-overlay">
                                            <h6 class="mb-2 text-dark">@imageItem.Nom @imageItem.ImageItemId</h6>
                                            <div class="d-flex align-items-center justify-content-between">
                                                <div>
                                                    <p class="small text-muted m-0 p-0">
                                                        @imageItem.DateCreation.ToString("MM/dd/yyyy")<br />
                                                        @imageItem.DateCreation.ToString("hh:mm tt")
                                                    </p>
                                                </div>
                                                <div>
                                                    <form method="post">
                                                        <input type="submit" value="Delete" class="btn btn-sm rounded-pill btn-danger" asp-page-handler="DeleteImg" asp-route-idImage="@imageItem.ImageItemId" asp-route-IdGallery="@imageItem.GalerieId" onclick="return confirm('Are you sure you want to delete this picture ?')">
                                                        <input type="submit" value="Edit" class="btn btn-sm rounded-pill btn-info" asp-page-handler="EditImg" asp-route-idImage="@imageItem.ImageItemId" asp-route-openedGallery="@imageItem.GalerieId">
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    <hr />
                    <div class="row">
                        @if (Model.AddedImage == null)
                        {
                            <p class="m-1">Add a new picture</p>
                        }
                        else
                        {
                            if (Model.AddedImage.ImageItemId == 0)
                            {
                                <p class="m-1">Add a new picture</p>
                            }
                            else
                            {
                                <p>Edit picture: @Model.AddedImage.Nom</p>
                            }
                        }
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <form method="post" class="formGallery" asp-page-handler="AddImage" asp-route-openedGallery="@Model.Galerie.Id" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="AddedImage.Nom" class="control-label"></label>
                                    <input asp-for="AddedImage.Nom" class="form-control" />
                                    <span asp-validation-for="AddedImage.Nom" class="text-danger"></span>
                                    <input type="hidden" asp-for="AddedImage.GalerieId" value="@Model.Galerie.Id">
                                    @if (Model.AddedImage != null)
                                    {
                                        <input type="hidden" asp-for="AddedImage.ImageItemId" value=@Model.AddedImage.ImageItemId>
                                    }
                                </div>
                                <div class="form-group">
                                    <label asp-for="AddedImage.Description" class="control-label"></label>
                                    <textarea asp-for="AddedImage.Description" class="form-control"></textarea>
                                    <span asp-validation-for="AddedImage.Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="AddedImage.DateCreation" class="control-label"></label>
                                    <input asp-for="AddedImage.DateCreation" class="form-control" />
                                    <span asp-validation-for="AddedImage.DateCreation" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="AddedImage.ImageFile" class="control-label"></label>
                                    <input asp-for="AddedImage.ImageFile" accept="image/*" />
                                    <span asp-validation-for="AddedImage.ImageFile" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <input type="submit" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
