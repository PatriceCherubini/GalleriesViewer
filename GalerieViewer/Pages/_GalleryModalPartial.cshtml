@model GalerieViewer.ViewModels.EditGalleryViewModel
@* Modal that display a form to create a new gallery or to edit an existing one *@
<div class="modal fade" tabindex="-1" role="dialog" id="newGallery">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p id="add-gallery-modal"> @((Model.Gallery.Id == 0)? "Create a new gallery" : "Edit Gallery")</p>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" data-url="@Url.Page("Index", Model.OpenedGallery)">
                <form method="post" class="m-2" asp-page-handler="AddGallery" enctype="multipart/form-data">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <input type="hidden" asp-for="Gallery.Id" value="@Model.Gallery.Id" />
                    <input type="hidden" asp-for="Gallery.DateCreation" value="@Model.Gallery.DateCreation" />
                    <input type="hidden" asp-for="OpenedGallery" value="@Model.OpenedGallery" />
                    <input type="hidden" asp-for="Gallery.UserId" value="@Model.Gallery.UserId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Gallery.Name" class="control-label"></label>
                        <input asp-for="Gallery.Name" class="form-control" />
                        <span asp-validation-for="Gallery.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gallery.Description" class="control-label"></label>
                        <textarea asp-for="Gallery.Description" class="form-control"></textarea>
                        <span asp-validation-for="Gallery.Description" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>