@model GalerieViewer.ViewModels.ViewImageViewModel

<div class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document" id="showImage">
        <div class="modal-content">
            <div class="modal-body">
                <div id="containerHeaderImg">
                    <div class="row">
                        <div class="col">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mb-4" id="nomImage">
                            @Model.Image.Nom
                        </div>
                    </div>
                </div>
                <div class="card">
                    <img class="card-img w-100" src="~/Images/@Model.Image.FileName" alt="@Model.Image.Description">
                    <div class="card-img-overlay">
                        <p>@Model.Image.DateCreation</p>
                        <p id="descriptionImage">@Model.Image.Description</p>
                        <a data-toggle="ajax-modal-navigateImage" class="carousel-control-prev @((Model.IdPrevious == null)?"invisible":"")" data-url="@Url.Page("Index", "ViewImageModalPartial", new { idImage = Model.IdPrevious})">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a data-toggle="ajax-modal-navigateImage" class="carousel-control-next @((Model.IdNext == null)?"invisible":"")" data-url="@Url.Page("Index", "ViewImageModalPartial", new { idImage = Model.IdNext })">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                </div>
                <div class="modal-footer">
                    <div class="row">@Model.Position</div>
                </div>
            </div>
        </div>
    </div>
</div>

